<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/profile_image_serach"
        android:src="@drawable/ic_profile"
        android:layout_margin="5dp"

        ></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username_search"
        android:text="Username"
        android:textStyle="bold"
        android:layout_toEndOf="@id/profile_image_serach"
        android:layout_marginStart="12dp"
        android:textSize="19sp"
        android:layout_centerInParent="true"

        ></TextView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/image_online"
         app:civ_border_width="8dp"
        android:layout_margin="15dp"
        android:src="@drawable/ic_profile"
        app:civ_border_color="#05df29"
        android:layout_toEndOf="@id/username_search"
        android:layout_centerInParent="true"
        android:visibility="gone"

        ></de.hdodenhof.circleimageview.CircleImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/image_offline"
        app:civ_border_width="8dp"
        android:layout_margin="15dp"
        android:src="@drawable/ic_profile"
        app:civ_border_color="#bfbfbf"
        android:visibility="invisible"

        android:layout_toEndOf="@id/username_search"
        android:layout_centerInParent="true"

        ></de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_last"
      android:layout_below="@id/username_search"
        android:layout_marginStart="85dp"
       android:layout_marginTop="14dp"
        android:layout_marginLeft="20dp"

        android:padding="6dp"
        android:maxLines="1"

        android:textSize="19sp"


        ></TextView>

</RelativeLayout>